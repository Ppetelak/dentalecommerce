<!-- Dados do Titular -->
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="nomecompleto">Nome Completo:</label>
                <input type="text" class="form-control" id="nomecompleto" name="nomecompleto"
                    placeholder="Nome completo do titular do plano" required>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="datadenascimento">Data de Nascimento:</label>
                <input type="date" class="form-control" id="datadenascimento" name="datadenascimento"
                    placeholder="Data de Nascimento" required>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="cpftitular">CPF <span class="aviso">(Sem pontos, apenas números)</span></label>
                <input type="number" class="form-control" id="cpftitular" name="cpftitular" placeholder="Cpf do titular"
                    onblur="validarCPF(this)" required>
                <span class="valid-feedback"></span>
                <span class="invalid-feedback"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="nomemaetitular">Nome da Mãe:</label>
                <input type="text" class="form-control" id="nomemaetitular" name="nomemaetitular"
                    placeholder="Nome da mãe" required>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="rgtitular">RG</label>
                <input type="text" class="form-control" id="rgtitular" name="rgtitular" placeholder="RG do titular"
                    required>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="orgaoexpedidor">Orgão expedidor</label>
                <input type="text" class="form-control" id="orgaoexpedidor" name="orgaoexpedidor"
                    placeholder="Nome da mãe" required>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="dataexpedicaorgtitular">Data Expedição RG</label>
                <input type="date" class="form-control" id="dataexpedicaorgtitular" name="dataexpedicaorgtitular"
                    placeholder="RG do titular" required>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="sexotitular">Sexo:</label>
                <select class="form-control" id="sexotitular" name="sexotitular" required>
                    <option disabled selected value="">Selecione ...</option>
                    <option value="Masculino">Masculino</option>
                    <option value="Feminino">Feminino</option>
                </select>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="estadociviltitular">Estado Civil:</label>
                <select class="form-control" id="estadociviltitular" name="estadociviltitular" required>
                    <option disabled selected value="">Selecione ...</option>
                    <option value="Casado">Casado(a)</option>
                    <option value="Divorciado">Divorciado(a)</option>
                    <option value="Separado">Separado(a)</option>
                    <option value="Solteiro">Solteiro(a)</option>
                    <option value="Viúvo">Viúvo(a)</option>
                </select>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="telefonetitular">Telefone</label>
                <input type="tel" class="form-control required" id="telefonetitular" name="telefonetitular"
                    placeholder="Telefone" required>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="celulartitular">Celular</label>
                <input type="text" class="form-control" id="celulartitular" name="celulartitular"
                    placeholder="Informe telefone celular" required>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="emailtitular">Email</label>
                <input type="email" class="form-control" id="emailtitular" name="emailtitular"
                    placeholder="Email titular" required>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="profissaotitular">Profissão:</label>
                <select class="form-control" id="profissaotitular" name="profissaotitular" required>
                    <option disabled selected value="">Selecione ...</option>
                    <% profissoes.forEach(function(profissao) { %>
                        <option value="<%= profissao.nome %>" data-id="<%= profissao.idEntidade %>">
                            <%= profissao.nome %>
                        </option>
                        <% }); %>
                </select>
                <input type="hidden" id="idEntidade" name="idEntidade" />
            </div>
        </div>
    </div>
</div>