<!DOCTYPE html>
<html>

<head>
    <title>Corretores</title>
    <link rel="icon" type="image/png" href="./img/faviconV2_mounthermon.png" sizes="32x32">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Kanit:wght@100;200;300;500;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/bootstrap-icons/font/bootstrap-icons.css">


</head>

<body>
    <%- include('navbar') %>
    <div class="content">
        <div class="cabecalho">
            <div class="row">
                <div class="col-6">
                    <label> Filtrar Corretor por CPF </label>
                    <input type="text" id="searchCpf" class="form-control mb-3" placeholder="Buscar por CPF">
                </div>
                <div class="col-6 d-flex align-items-center justify-content-center">
                <button class="btn btn-success adicionar-corretor">Adicionar Corretor</button>
                </div>
            </div>
        </div>
        <table class="table table-bordered">
            <thead>
              <tr>
                <th>CPF</th>
                <th>Nome</th>
                <th>Telefone</th>
                <th>Email</th>
                <th>Corretora</th>
                <th>Ações</th>
              </tr>
            </thead>
            <tbody>
              <tr class="new-corretor d-none">
                <td><input type="text" class="form-control new-cpf" placeholder="CPF"></td>
                <td><input type="text" class="form-control new-nome" placeholder="Nome"></td>
                <td><input type="text" class="form-control new-telefone" placeholder="Telefone"></td>
                <td><input type="text" class="form-control new-email" placeholder="Email"></td>
                <td>
                  <select class="form-control new-corretora">
                  <% corretoras.forEach((corretora) => { %>
                      <option value="<%= corretora.id %>"><%= corretora.nomeFantasia %></option>
                  <% }); %>
                  </select></td>
                <td>
                  <div class="d-flex justify-content-between">
                    <button class="btn btn-success btn-save-new">Salvar</button>
                    <button class="btn btn-secondary btn-cancel-new">Cancelar</button>
                  </div>
                </td>
              </tr>
              <% corretores.forEach((corretor) => { %>
              <tr data-id="<%= corretor.id %>" data-operadora-id="<%= corretor.corretora %>">
                <td class="cpf"><span class="edit-field"><%= corretor.cpf %></span><input class="edit-input d-none" value="<%= corretor.cpf %>"></td>
                <td><span class="edit-field"><%= corretor.nome %></span><input class="edit-input d-none" value="<%= corretor.nome %>"></td>
                <td><span class="edit-field"><%= corretor.telefone %></span><input class="edit-input d-none" value="<%= corretor.telefone %>"></td>
                <td><span class="edit-field"><%= corretor.email %></span><input class="edit-input d-none" value="<%= corretor.email %>"></td>
                <td>
                    <span class="edit-field"><%= corretor.corretoraNome %></span>
                    <select class="edit-input d-none">
                    <% corretoras.forEach((corretora) => { %>
                        <option value="<%= corretora.id %>"><%= corretora.nomeFantasia %></option>
                    <% }); %>
                    </select>
                <td>
                  <div class="d-flex justify-content-between">
                    <% if (corretor.editing) { %>
                        <button class="btn btn-success btn-save">Salvar</button>
                        <button class="btn btn-secondary btn-cancel">Cancelar</button>
                      <% } else { %>
                        <button class="btn btn-primary btn-edit">Editar</button>
                        <% if (!corretor.editing) { %>
                          <button class="btn btn-danger btn-delete">Excluir</button>
                        <% } %>
                        <button class="btn btn-secondary btn-cancel d-none">Cancelar</button>
                        <button class="btn btn-success btn-save d-none">Salvar</button>
                      <% } %>
         
                  </div>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
    </div>
    <script src="/js/jsActiveLink.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/js/scriptCorretores.js"></script>
      



</body>