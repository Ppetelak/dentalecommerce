<!DOCTYPE html>
<html>

<head>
    <title>Corretoras</title>
    <link rel="icon" type="image/png" href="./img/faviconV2_mounthermon.png" sizes="32x32">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Kanit:wght@100;200;300;500;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/bootstrap-icons/font/bootstrap-icons.css">
</head>

<body>
    <%- include('navbar') %>
    <div class="content">
        <div class="cabecalho">
            <div class="row">
                <div class="col-6">
                    <label> Filtrar Corretora por CNPJ </label>
                    <input type="text" id="searchCnpj" class="form-control mb-3" placeholder="Buscar por CNPJ">
                </div>
                <div class="col-6 d-flex align-items-center justify-content-center">
                <button class="btn btn-success adicionar-corretora">Adicionar Corretora</button>
                </div>
            </div>
        </div>
        <table class="table table-bordered">
            <thead>
              <tr>
                <th>CNPJ</th>
                <th>Razão Social</th>
                <th>Nome Fantasia</th>
                <th>Ações</th>
              </tr>
            </thead>
            <tbody>
              <% corretoras.forEach((corretora) => { %>
              <tr data-id="<%= corretora.id %>">
                <td class="cnpj"><span class="edit-field"><%= corretora.cnpj %></span><input class="edit-input d-none form-control" value="<%= corretora.cnpj %>"></td>
                <td><span class="edit-field"><%= corretora.razaoSocial %></span><input class="edit-input d-none form-control" value="<%= corretora.razaoSocial %>"></td>
                <td><span class="edit-field"><%= corretora.nomeFantasia %></span><input class="edit-input d-none form-control" value="<%= corretora.nomeFantasia %>"></td>
                <td>
                  <div class="d-flex justify-content-between">
                    <% if (corretora.editing) { %>
                        <button class="btn btn-success btn-save">Salvar</button>
                        <button class="btn btn-secondary btn-cancel">Cancelar</button>
                      <% } else { %>
                        <button class="btn btn-primary btn-edit">Editar</button>
                        <% if (!corretora.editing) { %>
                          <button class="btn btn-danger btn-delete">Excluir</button>
                        <% } %>
                        <button class="btn btn-secondary btn-cancel d-none">Cancelar</button>
                        <button class="btn btn-success btn-save d-none">Salvar</button>
                      <% } %>
         
                  </div>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
    </div>
    <script src="/js/jsActiveLink.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/js/scriptCorretoras.js"></script>
      



</body>